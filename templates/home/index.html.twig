			{# 3d cards #}
			<div class="section bg-transparent">
				<div class="container">
					{% include "_elements/section-title.html.twig" with {
						section: 'Projects',
						title: 'A glimpse of what i do.',
						offsetLeft: true,
						content: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequatur blanditiis saepe dolore tempora nihil praesentium dolorum unde, earum, nostrum odit?'
