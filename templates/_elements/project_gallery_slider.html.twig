{# Config

    Mandatory variables:
        - gallery: <string[]> Array of images names

#}
    {% set autoplay = false %}
    {% set showArrows = true %}
    {% set showPagination = true %}
    {% set smoothHeight = false %}

    {% set sliderShowMainImage = false %}
    {% set autoplayDelay = 6000 %}
    {% set slideSpeed = 500 %}
    {% set sliderHeight = '70vh' %}
    {% set sliderMaxHeight = '600px' %}



{# Prepare #}

    {% set autoplay = autoplay is defined and autoplay is not same as(false) ? "true" : "false" %}
    {% set showArrows = showArrows is defined and showArrows is not same as(false) ? "true" : "false" %}
    {% set showPagination = showPagination is defined and showPagination is not same as(false) ? "true" : "false" %}
    {% set smoothHeight = smoothHeight is defined and smoothHeight is not same as(false) ? "true" : "false" %}

{# Project Gallery Slider ======================================================== #}

<div class="fslider project-show" data-smooth-height={{ smoothHeight }} data-slideshow={{ autoplay }} data-pagi={{ showPagination }} data-arrows={{ showArrows }} data-pause={{ autoplayDelay }} data-speed={{ slideSpeed }}>
    <div class="flexslider">
        <div class="slider-wrap scroll-hover-container" style="height:1000px">

            {# mainImage slide #}
            {% if sliderShowMainImage %}
                <div class="slide shadow scroll-hover-img">
                    <img src="{{ uploadUrl('UPLOADS_PROJECTS', project.mainImage) }}" alt="Image of project: {{ project.title }}">
                </div>
            {% endif %}

            {# gallery slides #}
            {% for i, item in project.gallery %}

                {% set isVideo = file('getMime', item.item) is same as(file('VIDEO_TYPE')) ? true : false %}

                <div class="slide shadow{{ isVideo ? " slider-element" }} scroll-hover-img">
                        		
                    {% if isVideo %}

                        <video poster="{{ uploadUrl('UPLOADS_PROJECTS', project.mainImage) }}" preload="auto" loop autoplay muted>
                            <source src='{{ uploadUrl('UPLOADS_PROJECTS', item.item) }}' type='video/mp4' />
                        </video>
                       
                    {% else %} 

                        <img src="{{ uploadUrl('UPLOADS_PROJECTS', item.item) }}" alt="Image n.{{ i }} of project: {{ project.title }}">
                    
                    {% endif %}

                </div>

            {% endfor %}
        </div>
    </div>
</div>