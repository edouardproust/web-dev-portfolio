{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
	{{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block hero %}
	{# title rotation: 
		{before: <string>, rotate: <string>, 'after: <string>} 
		Separate 'words' with a "|". Eg: "These|words|will|rotate" 
	#}	
    <section class="include-header" style="height: 100vh; background: url('{{ asset('build/images/dots-1.png') }}') 100% 0 no-repeat; background-size: 60% auto">
		{% include "_sections/home/hero.html.twig" with {
			section: "Hello,",
			title: {
				before: "I am a ", 
				words:"full-stack|PHP|javascript|web",
				after: "<br>developer" 
			},
			headline: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fuga quasi quo ea magnam dignissimos quis obcaecati aut in.",
			contactButtons: {
				label: 'View my works',
				url: path('projects'),
				btnIcon: null,
				socials: [ 
					{ slug: 'email3', link: 'mailto:' ~ config('CONTACT_EMAIl') },
					{ slug: 'github', link: config('SOCIAL_GITHUB') },
					{ slug: 'linkedin', link: config('SOCIAL_LINKEDIN') }
				]
			},
			slider: {
				slides: [
					{img: asset('build/images/home/edouard.jpg')},
					{img: asset('build/images/home/edouard-nb.jpg')}
				],
				options: {}
			}
		} %}
    </section>

{% endblock %}
		
{% block main %}

	<section id="content">
		<div class="content-wrap pt-0">

			{# flip cards #}
