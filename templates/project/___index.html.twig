{% extends '_layout/collection.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('collection') }}
	{{ encore_entry_script_tags('animation') }}
	{{ encore_entry_script_tags('slider') }}
{% endblock %}

{% set page_title = 'Portfolio' %}
{% set page_desc = 'Showcase of Our Awesome Works in 3 Columns' %}
{% set breadcrumb = [
    {label: 'Home', url: path('home')},
    {label: 'Portfolio', active: true}
] %}
{% set collection_filters = {
        pf_illustrations:  'Illustrations', 
        pf_uielements: 'UI Elements',
        pf_media: 'Media',
        pf_graphics: 'Graphics',
        pf_icons: 'Icons'
} %}
{% set collection_items = [
    {
        title: 'Open Imagination',
        img: asset('build/images/portfolio/3/1.jpg'),
        zoom: asset('build/images/portfolio/full/1.jpg'),
        link: path('portfolio_show'),
        categories: [
            ['Media', '#media', 'pf_media'],
            ['Icons', '#icons', 'pf_icons']
        ]
    },{
        title: 'Mac Sunglasses',
        img: asset('build/images/portfolio/3/3.jpg'),
        zoom: 'https://vimeo.com/89396394',
        video: true,
        link: path('portfolio_show'),
        categories: [
            ['Graphics', '#graphics', 'pf_graphics'],
                ['UI Elements', '#ui', 'pf_uielements']
        ]
    },{
        title: 'Morning Dew',
        img: [ 
            asset('build/images/portfolio/3/6.jpg'),
            asset('build/images/portfolio/3/6-1.jpg'),
            asset('build/images/portfolio/3/6-2.jpg'),
            asset('build/images/portfolio/3/6-3.jpg')
        ],
        zoom: [ 
            asset('build/images/portfolio/full/6.jpg'),
            asset('build/images/portfolio/full/6-1.jpg'),
            asset('build/images/portfolio/full/6-2.jpg'),
            asset('build/images/portfolio/full/6-3.jpg')
        ],
        link: path('portfolio_show'),
        categories: [
            ['Media', '#media', 'pf_media'],
            ['Illustrations', '#illustrations', 'pf_illustrations']
        ]
    }
] %}


{# Render #}

{% block collection_items %}
    
    <div id="collection" class="portfolio portfolio-reveal row grid-container gutter-30" data-layout="fitRows">
        {% for projects in collection_items %}
            {% include "_elements/portfolio-collection-item.html.twig" with {
                project: projects
            } %}
        {% endfor %}
    </div>
    
{% endblock %}