                        btnLink: '#'
                    },{
                        icon: 'icon-check',
                        title: 'Wild Photography',
                        contentFront: 'Lorem ipsum dolor sit amet consectetur adipisicing elit.',
                        contentBack: 'Ratione voluptate aspernatur quidem deserunt',
                        imgBack: asset('uploads/projects/thumbnail/placeholder.png'),
                        btnLabel: 'View Photos',
