{% extends 'base.html.twig' %}

{% block title %}
	{{ codingLanguage.label ~ ' Posts' }}
{% endblock %}

{% block body %}

	<h1>{{ codingLanguage.label ~ ' Posts' }}</h1>

	<div class="collection">

		{% for post in posts %}
			{% include "_parts/card_post.html.twig" %}
		{% endfor %}

		<div class="pagination">
			{{ knp_pagination_render(posts) }}
		</div>

	</div>

{% endblock %}
