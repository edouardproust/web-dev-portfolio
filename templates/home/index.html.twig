{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('gallery') }}
	{{ encore_entry_script_tags('slider') }}
	{{ encore_entry_script_tags('animation') }}
	{{ encore_entry_script_tags('content') }}
{% endblock %}

{% block hero %}

    <section id="slider"
        class="slider-element min-vh-60 min-vh-md-100 include-header" 
        style="background: url('{{ asset('build/images/dots-1.png') }}') 100% 0 no-repeat; background-size: 60% auto"
    >
        {% include "_sections/home/hero-slider.html.twig" %}
    </section>

{% endblock %}
		
{% block main %}

	<section id="content">
		<div class="content-wrap">

			{# flip cards #}
			{% include "_sections/home/flip-cards.html.twig" with {
				section: 'Experience',
				title: 'I have been taking photographs for the last 7 years.',
				columns: 4,
				parallax: { top: '-100px', bottom: '100px' },
				removeVerticalMargins: true,
				titleSize: '36px'
			} %}

			{# wrap cards #}
			{% include "_sections/home/wrap-cards.html.twig" with {
				section: 'Some of Featured Pictures',
				title: 'See what I Did.',
				offsetLeft: true,
			} %}

			{# counters #}
			{% include "_sections/home/counters.html.twig" %}
			
			{# clients #}
			{% include "_sections/home/clients.html.twig" with {
				section: 'Trusted Partners',
				title: 'Happy Clients',
				columns: 12
			} %}

			{# services cards #}
			{% include "_sections/home/services.html.twig" with {
				section: 'Steps of Works',
				title: 'See How I Do.',
			} %}
			
			{# contact & testimonials #}
			{% include "_sections/home/footer-contact.html.twig"  with {
				section: "Let's Say Hi!",
				title: "Contact Me Here."
			} %}

		</div>
	</section>

{% endblock %}