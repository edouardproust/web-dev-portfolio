{# Config 

    Mandatory variables:
        - skills: <array[]> Array of skills: [ [ skill: <string>, percent: <int> ], ... ]

#}

    {% set skills = skills.skills %}
    
    {# All skills values #}
    {% set dataFrom = 0 %}
    {% set dataRefreshInterval = 30 %} 
    {% set dataSpeed = 1100 %}

{# Skill Counters element ======================================================= #}

    <ul class="skills">

        {% for skill in skills %}

            {% set name = skill.0 %}
            {% set percentage = skill.1 %}

            <li data-percent="{{ percentage }}">
                <span>{{ name }}</span>
                <div class="progress">
                    <div class="progress-percent"><div class="counter counter-inherit counter-instant"><span data-from="{{ dataFrom }}" data-to="{{ percentage }}" data-refresh-interval="{{ dataRefreshInterval }}" data-speed="{{ dataSpeed }}"></span>%</div></div>
                </div>
            </li>

        {% endfor %}

    </ul>