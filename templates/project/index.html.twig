{% extends '_layout/collection.html.twig' %}

{% block javascripts %}
    {{ parent() }}
	{{ encore_entry_script_tags('slider') }}
	{{ encore_entry_script_tags('gallery') }}
{% endblock %}

{# Config #}

{% block title %}Portfolio{% endblock %}

{% set page_title = 'Portfolio' %}
{% set breadcrumb = [
    {label: 'Home', url: path('home')},
    {label: 'Portfolio', active: true}
] %}
{% set collection_filters = categories %}


{# Collection of Projects =============================================== #}

{% block hero %}

    {% include "_sections/page-title/default.html.twig" with { 
        title: 'Portfolio',
        subtitle: 'Showcase of My Awesome Works'
    } %}
    
{% endblock %}

{% block content %}

    <div id="collection" class="portfolio portfolio-reveal row grid-container gutter-30" data-layout="fitRows">
        {% for project in projects %}
            {% include "_elements/portfolio-collection-item.html.twig" with {
                project: project,
                featuredProjects: featuredProjects
            } %}
        {% endfor %}
    </div>
    
{% endblock %}