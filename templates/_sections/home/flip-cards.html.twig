<div class="section">

    <div class="container">
        <div class="row align-items-center justify-content-between">

            {% include "_elements/section-title.html.twig" with {
                section: section,
                title: title,
                columns: columns,
                content: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequatur blanditiis saepe dolore tempora nihil praesentium dolorum unde, earum, nostrum odit?',
                parallax: parallax,
                removeVerticalMargins: removeVerticalMargins,
            } %}

            <div class="col-lg-7">
                <div class="row mt-5">

                    {% for card in cards %}

                        {% set imgBack = card.imgBack is defined ? 'style="background-image: url("' ~ card.imgBack ~ '")"' : '' %}

                        <div class="col-sm-6 mb-5">
                            <div class="flip-card">
                                <div class="flip-card-front no-after">
                                    <div class="flip-card-inner">
                                        {% if card.icon is defined %}
                                            <div class="mb-2">
                                                <i class="{{ card.icon }}"></i>
                                            </div>
                                        {% endif %}
                                        <div class="fbox-content">
                                            <h4>{{ card.title }}</h4>
                                            <p class="text-muted fw-medium">{{ card.contentFront }}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="flip-card-back" style="background-image: url('{{ card.imgBack }}')">
                                    <div class="flip-card-inner mt-3">
                                        <h4 class="mb-4">{{ card.contentBack }}</h4>
                                        {% if card.btnLabel is defined and card.btnLink is defined %}
                                            {% include "_elements/button.html.twig" with {
                                                url: card.btnLink,
                                                label: card.btnLabel
                                            } %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                    
                </div>
            </div>

        </div>
    </div>
</div>