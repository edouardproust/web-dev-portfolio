                    },{
                        icon: 'icon-check',
                        title: 'Candid Moments',
                        contentFront: 'Laboriosam ad culpa ab in et blanditiis ullam consectetur inventore?', 
                        contentBack: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. ',
                        imgBack: asset('uploads/projects/thumbnail/placeholder.png'),
